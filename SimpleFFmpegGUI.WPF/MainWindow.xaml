<Window
    x:Class="SimpleFFmpegGUI.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimpleFFmpegGUI.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:panels="clr-namespace:SimpleFFmpegGUI.WPF.Panels"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="FFmpeg 工具箱"
    Width="1200"
    Height="600"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <panels:TaskList
            x:Name="taskPanel"
            Grid.Column="0"
            Margin="8,0,0,0" />
        <panels:StatusPanel
            x:Name="statusPanel"
            Grid.Column="2" />

        <ui:CommandBar
            Grid.Row="2"
            Grid.ColumnSpan="99">

            <ui:AppBarButton
                Click="StartButton_Click"
                Icon="Play"
                Label="开始队列"
                Visibility="{Binding StartMainQueueButtonVisibility}" />
            <ui:AppBarButton
                Click="CancelButton_Click"
                Icon="Stop"
                Label="终止队列"
                Visibility="{Binding StopMainQueueButtonVisibility}" />
            <ui:AppBarButton
                Click="Button_Click"
                Icon="Add"
                Label="创建任务" />
        </ui:CommandBar>
    </Grid>
</Window>